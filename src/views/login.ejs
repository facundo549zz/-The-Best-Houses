<!DOCTYPE html>
<html lang="es">

    <%- include('partials/head') %> 

<body>
    <%- include('partials/header') %>
    <br>
    <h1 class="login ml-3"><%= title %></h1>
    <br>

    <div class="divvv">
      
        <img src="/images/logo.jpeg" alt="" />
        <form action="" method="POST">
        <div class="form-row">
          <div class="mt-2 col-md-6 mb-3">
            <label for="email">Email</label>
            <input
              placeholder="Email"
              type="email"
              class="form-control"
              id="email"
              email="email"
              value="<%= (typeof old != 'undefined' && old.email)?old.email:'' %>"
              name="email"
            />
            <small class="text-danger"><%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "" %> </small>

          </div>
          <div class="mt-2 col-md-6 mb-3">
            <label for="password">Constraseña</label>
            <input
              placeholder="Constraseña"
              type="password"
              class="form-control"
              password="password"
              name="password"
              id="password"
            />
            <small class="text-danger"><%= (typeof errors != 'undefined' && errors.password)?errors.password.msg: "" %> </small>
          </div>
        </div>

        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" id="exampleCheck1" name="recordar">
          <label class="form-check-label" for="exampleCheck1">Recordarme</label>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Iniciar Sesion</button>
          </div>
        </div>

        </form>
        </div>
         
  <%- include('partials/footer') %>
</body>
</html>