<!--HEADER-->
<header>
  <div class="container-fluid">
    <div class="row">
      <div class="col-2 col-md-6 col-lg-2">
        <a href="/"><img class="logo" src="/images/logo.jpeg" alt="" /></a>
      </div>

          <div class="col-5 col-md-6 col-lg-4">
            <form action="/search" method="get">
            <input type="text" name="search" placeholder="Buscar aqui">
            <button type="submit"><i class="fas fa-search"></i></button>
            </form>
            </div>

      <div class="col-2 col-md-9 col-lg-8">
        <!--barra de navegacion-->
        <nav class="navbar-expand-md">
          <!--boton de hamburguesa-->
          <button
            class="navbar-toggler burger"
            type="button"
            data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <i class="fas fa-bars"></i>
          </button>
          <!--menu de navegacion-->
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="menu navbar-nav mr-auto">
              <li><a href="">Bicicletas Armadas</a></li>
              <li><a href="">Marcas</a></li>
              <li><a href="">Arma tu Bicicleta</a></li>
              <li><a href="">Accesorios</a></li>
              <li><a href="">Respuestos</a></li>
              <% if (typeof user != "undefined" && user.rol != "user") { %>
              <li><a href="/users/profile">Administracion</a></li>
              <% } else{ %>
              <li><a href="/store/register">administrador</a></li>
              <% } %>
            </ul>
          </div>
        </nav>
      </div>

      <div class="col-1 col-md-1 col-lg-1">
        <form action="">
          <button class="icono1" type="button">
            <a href="/products/cart" class="fas fa-shopping-cart"></a>
          </button>
        </form>
      </div>

      <% if (typeof usuario == "undefined") { %>
  
      <div class="col-1 col-md-1 col-lg-1">
        <form action="">
          <button class="icono2" type="button">
            <a href="/users/register" class="far fa-user-circle"></a>
          </button>
        </form>
      </div>
      <div class="col-1 col-md-1 col-lg-1">
        <form action="">
          <button class="icono3" type="button">
            <a href="/users/login" class="fas fa-sign-in-alt"></a>
          </button>
        </form>
      </div>
      <% } else{ %>
        <a href="/users/logout" class="cerrarSesion">Cerrar sesi√≥n<i class="fas fa-sign-in-alt ml-3"></i></a>
        <% } %>


      <div class="col-12 col-md-12 col-lg-1 d-flex justify-content-end align-items-center avatar">

        <% if (typeof usuario == "undefined") { %>
        <a href="/users/profile">
            <h5 class="mr-2">Usuario</h5>
        </a>
        <a href="/users/profile"><img src="/images/users/default.png" alt="" width="30px" height="30px"></a>

        <% } else{ %>
      
        <a href="/users/profile">
            <h5 class="mr-2"><%= usuario.nick %> </h5>
        </a>
        <a href="/users/profile"><img src="/images/users/<%= usuario.imagen %>" alt="" width="30px" height="30px"
            class="rounded-circle avatar"></a>
        <% } %>
    </div>
    </div>
  </div>
</header>
