<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header') %>
    
    <h2 class="ml-3">Listado de productos disponibles:</h2>
    <div class="container-fluid">
      <div class="row">
        <div class="col-6 col-md-3 todosLosProductos">
          <section>
            <% productos.forEach(product =>{ %>
            <div class="prd ml-2">
              <%= product.marca %> <%= product.nombre %> <br />
              $<%= product.precio %>
              <a href="/products/<%= product.id %>">
              <img src="../public/images/bici/<%=product.fotos %>" alt=""/></a>
            </div>
            <% }) %>
          </section>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
